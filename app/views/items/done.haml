.confirm____container
  .confirm__simple__header
    = link_to "#" do
      = image_tag 'fmarket_logo_red.svg'
  .buydone-main
    .wait
      %p.please_wait
        %i.far.fa-clock
        発想をお待ちください
      %p.under-please_wait 出品者からの発想通知をお待ちください
    .buy-complete
      %h2.buy-complete-text 購入が完了しました
    .buy-complete-img
      = image_tag "#{@item.images[0].image_url}", height: "200px" , width: "200px"
      %p.buy-done-itemname 
        = @item.name
    .buy-complete-price
      %p.buy-done-price
        - i_price = @item.price.to_s
        = "¥" + i_price
      %p.buy-done-postage 送料込み
    .buy-complete-adress
      %h3 配送先
      %p.buy-done-adress
        〒#{current_user.user_address.postcode}
        %br/
        #{current_user.user_address.prefecture.name}#{current_user.user_address.city}#{current_user.user_address.address}
    .buy-complete-paymethod
      %h3 支払い方法
      %p.buy-done-cardinfo
        クレジットカード
        %br/
        = "**** **** **** " + @default_card_information.last4
        %br/
        - exp_month = @default_card_information.exp_month.to_s
        - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
        = "有効期限" + exp_month + " / " + exp_year
    .after-buy-done-flow
      %h3 発送通知後の流れ
      %i.fas.fa-smile-beam
      %i.fas.fa-meh
      %i.fas.fa-tired
      %p
        商品を受け取ったら
        %br>/
        出品者の評価をしましょう。
        %br>/
        購入代金が出品者に振り込まれます。
        %br>/
        評価後に取引は完了です
      = link_to "マイページへもどる", '/', class:"redirect-mypage"

  .signup__footer
    .signup__footer__detail
      = link_to "プライバシーポリシー"
      = link_to "メルカリ利用規約"
      = link_to "特定商取引に関する表記"
    .signup__footer__logo
      = link_to root_path do
        = image_tag "logo_gray.svg"
    %p
      %small © Mercari, Inc.
