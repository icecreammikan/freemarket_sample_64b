.signin__container
  = render 'sign_up/login_simple_header'
  .signin-main
    .signin-main__section
      %p アカウントをお持ちでない方はこちら
      = link_to "新規会員登録", users_sign_up_registration_path
    .signin-main__sns
      = link_to user_facebook_omniauth_authorize_path, method: :post do
        %button#facebook-login.signin-main__sns--facebook
          %i.fab.fa-facebook-square
          Facebookでログイン
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post do
        %button#google-login.signin-main__sns--google
          Googleでログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .signin-main__form
        .form-group
          = f.email_field :email, autocomplete: "email", class:'input_box', placeholder: "メールアドレス"
        .form-group
          = f.password_field :password, autocomplete: "new-password", class:'input_box', placeholder: "パスワード"
        .form-group
          = image_tag("https://i.gyazo.com/ce5541bb0a64b4d3a55f24edb0f9b140.png")
        %button.login-submit{:type => "submit"}
          ログイン
        = link_to "パスワードをお忘れの方", "#", class: "next-link"
  = render 'sign_up/login_footer'
